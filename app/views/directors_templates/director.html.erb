<h1>Director <%= @director.id %> details</h1>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <% if @director.dob.present? %>
      <%= @director.dob %>
    <% else %>
      N/A
    <% end %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @director.image %> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @director.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @director.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>
  
  <% @movies.each do |m| %>
    <tr>
      <td>
        <%= m.id %>
      </td>

      <td>
        <img src=<%= m.image %> style="width:250px;">
      </td>

      <td>
        <%= m.title %>
      </td>

      <td>
        <%= m.year %>
      </td>

      <td>
        <%= @director.name %>
      </td>

      <td>
        <a href="/movies/<%= m.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
